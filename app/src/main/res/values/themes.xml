<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WB53" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/soft_pink</item>
        <item name="colorOnPrimary">@color/almost_white</item>

        <item name="colorSecondary">@color/desaturated_dark_blue</item>
        <item name="colorOnSecondary">@color/almost_white</item>

        <item name="colorTertiary">@color/dark_grayish_blue</item>
        <item name="colorOnTertiary">@color/almost_white</item>

        <item name="background">@color/dark_grayish_blue</item>
        <item name="colorOnBackground">@color/almost_white</item>

        <item name="colorSurface">@color/desaturated_dark_blue</item>
        <item name="colorOnSurface">@color/almost_white</item>

        <item name="colorError">@color/red</item>
        <item name="colorErrorContainer">@color/pink_light</item>
        <item name="colorOnError">@color/almost_white</item>

        <item name="android:statusBarColor">?attr/colorTertiary</item>
    </style>

    <style name="Theme.WB53" parent="Base.Theme.WB53" />


    <style name="Theme.WB51.Toolbar.TitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.WB51.HeadlineMedium.TextAppearance" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white80</item>
    </style>

    <style name="Theme.WB51.HeadlineSmall.TextAppearance" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white80</item>
    </style>

    <style name="Theme.WB51.BodyLarge.TextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/white80</item>
    </style>

    <style name="Theme.WB51.BodyMedium.TextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white80</item>
    </style>

</resources>